@model CountryModel

@{
    
    var country = ViewBag.country;
    ViewData["Title"] = @Model.country.Replace("i","I").ToUpper();
}

<style>

#coronaTable {
 background-image: url("../img/bgcorona5.png");
 background-repeat:no-repeat;
 background-attachment:inherit;
 width: 900px;
 height: 450px;
}


</style>

<div class="jumbotron jumbotron-fluid mx-auto bg-dark " id="coronaTable">

    <h3 class="text-white text-center shadow pb-2" style="margin-top:-50px">
        <b class="text-danger">@Model.country.Replace("i","I").ToUpper()</b> GÜNLÜK KORONAVİRÜS TABLOSU</h3>

  <div class="container">

    <div class="row mt-4">

        <div class="col-md-3">
            <b>Toplam Test</b> <h4>  <b class="text-white">@Model.totalTests.ToString("0,0,0")</b></h4>
            
            <b>Toplam Hasta</b> <h4>  <b class="text-white">@(Model.cases.ToString("0,0,0"))</b></h4>

            <b>Toplam Vefat</b> <h4>  <b class="text-white">@Model.deaths.ToString("0,0,0")</b></h4>

            <b>Aktif Vaka</b> <h3>  <b class="text-white">@Model.active.ToString("0,0,0")</b></h3>

            <b>Toplam İyileşen Hasta</b> <h4>  <b class="text-white">@Model.recovered.ToString("0,0,0")</b></h4>
            
            <b>Kritik Hasta</b> <h4>  <b class="text-white">@Model.critical</b></h4>
                        


        </div>

        <div class="col-md-4 mx-auto text-center" style="margin-top: -20px">
           <h1 class="display-1 font-weight-bold text-white">@DateTime.Now.ToString("dd")</h1>
           <h2 class="display-4 font-weight-bold text-white">@DateTime.Now.ToString("MMMM")</h1>
           <h1 class="display-3 font-weight-bold text-white">@DateTime.Now.ToString("yyyy")</h1>
        </div>

        <div class="col-md-4 mt-2 mr-4 img-thumbnail" style="background-image: url('../img/bg6.jpg');height: 320px">
            <p class="mt-5 text-center">
                 <b class="text-light">BUGÜNKÜ VAKA SAYISI</b> <h3 class="mt-3 bg-danger text-center">
                   <b class="text-white">@Model.todayCases</b></h3>
            </p>
            
          <p class="mt-5 text-center">
               <b class="text-light">BUGÜNKÜ ÖLÜM SAYISI</b> <h3 class="mt-3 bg-danger text-center">
                   <b class="text-white">@Model.todayDeaths</b></h3>
          </p>

        </div>

    </div>   

  </div>
</div>

@if(!string.IsNullOrWhiteSpace(country)){
    
    if(country=="turkey"){
    <div class="text-center mx-auto">
        <img src="../img/coronauyarı.jpg" style="width:1200px" class="img-thumbnail" alt="">
    </div>
    }
    else{
    <div class="text-center mx-auto">
        <img src="../img/corona.jpg" style="width:1200px" class="img-thumbnail" alt="">
    </div>
    }
}

